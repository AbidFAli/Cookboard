{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true,
        "jest/globals": true,
        "cypress/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest",
        "cypress"
    ],
    "settings": {
        "react": {
            "version" : "detect"
        }
    },
    "rules": {
        "no-unused-vars" : ["warn"]
    }
}
